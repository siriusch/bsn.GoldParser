"Name"     = Text Calculator Grammar
"Author"   = Robert van Loenhout and Ars?ne von Wyss
"Version"  = 1.1
"About"    = 'Example for testing Gold Parser Engine'

"Start Symbol" = <Expression>
"Auto Whitespace" = True
"Character Mapping" = 'Unicode'

Comment Start = '/*'
Comment End   = '*/'
Comment Line  = '--'

! ------------------------------------------------- Sets

! ------------------------------------------------- Terminals

Integer = {Digit}+
Float = {Digit}*'.'{Digit}+([Ee][+-]?{Digit}+)?

! ------------------------------------------------- Rules

<Expression>  ::= <Expression> '+' <Mult Exp>
                | <Expression> '-' <Mult Exp>
                | <Mult Exp> 

<Mult Exp>    ::= <Mult Exp> '*' <Negate Exp>
                | <Mult Exp> '/' <Negate Exp>
                | <Negate Exp> 

<Negate Exp>  ::= '-' <Value> 
                | <Value> 

<Value>       ::= Integer
                | Float
                | '(' <Expression> ')'
